{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "sourceMap": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "declaration": false
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.spec.ts",
    "lib/test-utils"
  ]
}
